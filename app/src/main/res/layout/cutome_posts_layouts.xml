<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/colorWhite"
        android:elevation="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBloodRequestName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunitop_bold"
                    android:text="User Name."
                    android:textColor="@android:color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:elevation="5dp"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:weightSum="4"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nunito_lite"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:text="Blood Type:"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvbloodPostBloodGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:text="AB+"
                    android:textSize="14sp"
                    android:textColor="@color/colorPrimary"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:weightSum="4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/nunito_lite"
                    android:gravity="center_vertical"
                    android:layout_weight="3"
                    android:text="Date:"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/tvBloodPostDate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_lite"
                    android:gravity="center_vertical"
                    android:text="07/30/2023"
                    android:textColor="@android:color/black" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:weightSum="4"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nunito_lite"
                        android:gravity="center_vertical"
                        android:layout_weight="3"
                        android:text="Address:"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tvAddresBloodPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nunito_lite"
                        android:layout_weight="1"
                        android:text="Hawassa"
                        android:textColor="@android:color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_lite"
                        android:text="Description:"
                        android:layout_weight="3"
                        android:textAllCaps="true"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />


                    <TextView
                        android:id="@+id/tvbloodPostDecription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/nunito_lite"
                        android:layout_marginLeft="10dp"
                        android:text="is requesting for blood group....."
                        android:textAllCaps="false"
                        android:textColor="@android:color/black" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circlerImageViewDonatedBy"
                    android:layout_width="50sp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/donateBloodBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_linear_bg"
                    android:fontFamily="@font/nunitop_bold"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Donate"
                    android:textColor="@color/colorWhite" />
                <TextView
                    android:id="@+id/deleteRequestBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/ofline_status"
                    android:fontFamily="@font/nunitop_bold"
                    android:gravity="center"
                    android:paddingVertical="5dp"
                    android:text="Delete Request"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>