<!--                        android:gravity="center"-->
<!--                        android:text="Send Alert"-->
<!--                        android:textAlignment="center" />-->
<!--                </LinearLayout>-->
<!--            </androidx.cardview.widget.CardView>-->
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>